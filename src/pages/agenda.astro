---
import EnhancedImageSection from "../components/EnhancedImageSection.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Agenda">
  <Header />
  <main class="relative overflow-hidden">
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <div
        aria-hidden="true"
        class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
      >
        <div
          style={{
            clipPath:
              "polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)",
          }}
          class="absolute left-1/2 transform -translate-x-1/2 rotate-30 bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem] w-[36.125rem] aspect-[1155/678]"
        >
        </div>
      </div>
    </div>
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="mt-16 sm:mt-12">
        <div class="bg-gray-900/5 rounded-xl p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl lg:p-4">
          <div class="bg-white px-4 py-8 shadow sm:rounded-lg sm:px-10">
            <h1 class="text-center font-bold text-2xl md:text-4xl lg:text-4xl mb-8">Agendamiento</h1>
            <form class="space-y-6">
              <div class="grid grid-cols-1 gap-y-12 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-0">
                <div>
                  <h2 class="mb-2 font-semibold">Nombre del paciente</h2>
                  <input
                    class="border rounded-md px-2 py-2 w-full text-sm"
                    type="text"
                    placeholder="Nombre"
                  />
                  <h2 class="mb-2 font-semibold">Cédula del paciente</h2>
                  <input
                    class="border rounded-md px-2 py-2 w-full text-sm"
                    type="number"
                    placeholder="Identificación"
                  />
                  <h2 class="mb-2 font-semibold">Edad del paciente</h2>
                  <input
                    class="border rounded-md px-2 py-2 w-full text-sm"
                    type="number"
                    placeholder="Edad"
                  />
                </div>
                <div>
                  <h2 class="mb-2 font-semibold">Fecha de la cita</h2>
                  <input
                    class="border rounded-md px-2 py-2 w-full text-sm"
                    type="date"
                  />
                  <h2 class="mb-2 font-semibold">Paciente nuevo</h2>
                  <select class="border rounded-md px-2 py-2 w-full text-sm">
                    <option value="Si">Sí</option>
                    <option value="No">No</option>
                  </select>
                  
                  <h2 class="mb-2 font-semibold">Recomendado</h2>
                  <select class="border rounded-md px-2 py-2 w-full text-sm">
                    <option value="Si">Sí</option>
                    <option value="No">No</option>
                  </select>
                  
                </div>
                <div class=" min-h-full items-center justify-center p-4">
                  <EnhancedImageSection />
                </div>
              </div>
              <div>
                <h2 class="mb-2 font-semibold">Motivo consulta</h2>
                <textarea
                  class="border rounded-md px-4 py-2 w-full text-sm"
                  placeholder="Motivo"></textarea>
              </div>
              <button
                class="py-2 px-5 bg-blue-300 hover:bg-blue-100 rounded-md text-sm font-medium"
              >
                Cargar
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="mb-12 mt-28 sm:mt-40 flex flex-col items-center justify-center text-center">
      <h1 class="max-w-4xl text-5xl font-bold md:text-6xl lg:text-3xl"> </h1>
    </div>
  </main>
  <Footer/>
</Layout>

---
import Sidebar from "../../components/Sidebar.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Administrador - Agendamiento">
  <div class="flex min-h-screen">
    {/* Sidebar */}
    <Sidebar/>

    {/* Main Content */}
    <main class="flex-1 p-8 bg-gray-100 ml-64">
      <h1 class="text-4xl font-bold mb-4">Gestión de Agendamientos</h1>
      <p class="text-gray-700 mb-6">
        Administra los agendamientos de pacientes de manera organizada y sencilla.
      </p>
      
      {/* Crear nuevo agendamiento */}
      <div class="bg-gradient-to-r from-blue-700 to-blue-900 p-6 rounded-lg shadow-md mb-8 text-white">
        <h2 class="text-3xl font-semibold mb-4">Crear Nuevo Agendamiento</h2>
        <label class="block mb-5">
          <span class="text-lg">Nombre del Paciente:</span>
          <input type="text" placeholder="Nombre del paciente" class="w-full p-4 border rounded-lg mt-2 text-black" />
        </label>
        <label class="block mb-5">
          <span class="text-lg">Fecha y Hora:</span>
          <input type="datetime-local" class="w-full p-4 border rounded-lg mt-2 text-black" />
        </label>
        <button class="px-6 py-3 mt-6 bg-white text-black rounded-lg hover:bg-blue-100 transition-colors">
          Agendar
        </button>
      </div>
      {/* Lista de Agendamientos */}
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-3xl font-semibold mb-4 text-gray-800">Próximos Agendamientos</h2>
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
          <thead>
            <tr>
              <th class="py-3 px-4 border-b bg-gray-50 text-gray-800">ID</th>
              <th class="py-3 px-4 border-b bg-gray-50 text-gray-800">Paciente</th>
              <th class="py-3 px-4 border-b bg-gray-50 text-gray-800">Fecha</th>
              <th class="py-3 px-4 border-b bg-gray-50 text-gray-800">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr class="text-center">
              <td class="py-4 px-4 border-b">1</td>
              <td class="py-4 px-4 border-b">Luis Martínez</td>
              <td class="py-4 px-4 border-b">2024-11-05 10:00 AM</td>
              <td class="py-4 px-4 border-b">
                <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">Editar</button>
                <button class="ml-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">Cancelar</button>
              </td>
            </tr>
            {/* Más registros */}
          </tbody>
        </table>
      </div>
    </main>
  </div>
</Layout>